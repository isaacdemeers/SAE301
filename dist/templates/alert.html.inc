<div class="alert alert--onlyConfirm">
  <section class="alert__alertBox ">
    <i class="alert__alertBox__close btn--close material-icons">close</i>
    <h2 class="alert__alertBox__title">{{alertMessage}}</h2>
    <h2 class="alert__alertBox__text ">{{textMessage}}</h2>

    <div class="alert__alertBox__buttons">
      <button class="button button--cancel">Annuler</button>
      <button class="btn--close button button--confirm ">Confirmer</button>
    </div>
  </section>
</div>
