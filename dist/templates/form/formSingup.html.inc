<form class="login" action="post">
  <h2 class="login__title">Inscription</h2>
  <span class="login__line"></span>
  <ul class="login__list">
    <li class="login__item">
      <input class="login__input" placeholder="Nom" type="text" />
      <input class="login__input" placeholder="Prenom" type="text" />
    </li>
    <li class="login__item">
      <input class="login__input" placeholder="E-mail" type="email" />
    </li>
    <li class="login__item">
      <input class="login__input" placeholder="Mot de passe" type="password" />
    </li>
  </ul>
  <a href="#" class="login__noAccount">Déjà un Compte ? Connectez-vous</a>
  <button class="button button--confirm">Continuer</button>
</form>
